PORT=3000

# Optional (enable private mode later)
OWNER_EMAIL=you@example.com
JWT_SECRET=replace_with_secure_random_string

--- keep-alive.yml ---
name: keep-alive

on:
  schedule:
    - cron: "*/10 * * * *"

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Ping health endpoint
        run: |
          curl -f https://YOUR_RENDER_URL/health || exit 1